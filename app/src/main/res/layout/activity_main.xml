<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fondo2">

    <TextView
        android:id="@+id/txtActividad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lee la lectura y responde"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <Button
        android:id="@+id/btnAbrir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/txt_boton"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <Button
        android:id="@+id/btnAudio"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="228dp"
        android:layout_marginTop="656dp"
        android:background="@drawable/bocina"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnEscuchar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bocina"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtActividad"
        app:layout_constraintVertical_bias="0.060000002" />

    <Button
        android:id="@+id/btnEscuchar2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bocina"
        app:layout_constraintBottom_toTopOf="@+id/rdgCambio"
        app:layout_constraintEnd_toEndOf="@+id/txtLectura" />

    <TextView
        android:id="@+id/txtLectura"
        android:layout_width="330dp"
        android:layout_height="400dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/fondo_lectura2"
        android:text="\nAlex está jugando con Rufo. Rufo es un perro café y peludo. Rufo necesita un baño."
        android:textAlignment="center"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/rdgCambio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEscuchar"
        app:layout_constraintVertical_bias="0.439" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purple_200"
        android:backgroundTint="#CB673AB7"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="start"
            android:text="Time: 00:00"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtIntentos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Intentos: 0"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtNumAct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1/3"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/rdgCambio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="visible">

            <RadioButton
                android:id="@+id/rd1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="700"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rd2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="false" />

        </LinearLayout>

    </RadioGroup>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="360dp"
        android:layout_height="400dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/rdgCambio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEscuchar"
        app:layout_constraintVertical_bias="0.115">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtP1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pregunta 1"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/rdgPregunta1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/rd1A"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A)"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rd1B"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="B)"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rd1C"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="C)"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rd1D"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="D)"
                    android:textSize="16sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/txtP2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pregunta 2"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/rdgPregunta2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/rd2A"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A)"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rd2B"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="B)"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rd2C"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="C)"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rd2D"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="D)"
                    android:textSize="16sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/txtP3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pregunta 3"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/rdgPregunta3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/rd3A"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A)"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rd3B"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="B)"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rd3C"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="C)"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rd3D"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="D)"
                    android:textSize="16sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/txtP4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="gone" />

            <RadioGroup
                android:id="@+id/rdgPregunta4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/rd4A"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RadioButton" />

                <RadioButton
                    android:id="@+id/rd4B"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RadioButton" />

                <RadioButton
                    android:id="@+id/rd4C"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RadioButton" />

                <RadioButton
                    android:id="@+id/rd4D"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RadioButton" />
            </RadioGroup>

            <TextView
                android:id="@+id/txtP5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="gone" />

            <RadioGroup
                android:id="@+id/rdgPregunta5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/rd5A"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RadioButton" />

                <RadioButton
                    android:id="@+id/rd5B"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RadioButton" />

                <RadioButton
                    android:id="@+id/rd5C"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RadioButton" />

                <RadioButton
                    android:id="@+id/rd5D"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RadioButton" />
            </RadioGroup>

            <Button
                android:id="@+id/btnAceptar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#BFFF9800"
                android:text="Aceptar"
                app:cornerRadius="20dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>